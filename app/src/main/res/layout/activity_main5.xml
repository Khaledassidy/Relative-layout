<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:layout_gravity="center"
    tools:context=".MainActivity5">

    <ImageView
        android:id="@+id/prof"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        android:src="@drawable/newprofilepicture"
        android:layout_centerHorizontal="true">

    </ImageView>

    <ImageView
        android:id="@+id/icon1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon1"
        android:scaleType="centerCrop"
        android:layout_below="@id/prof">

    </ImageView>

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/prof"
        android:layout_marginLeft="52dp"
        android:layout_marginRight="20dp"
        android:hint="Full name"
        android:paddingLeft="5dp">

    </EditText>

    <ImageView
        android:id="@+id/icon2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon1"
        android:layout_below="@id/icon1">
    </ImageView>

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:paddingLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/name"
        android:layout_alignStart="@id/name"
        android:hint="User name">

    </EditText>

    <ImageView
        android:id="@+id/icon3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:srcCompat="@android:drawable/ic_lock_idle_lock"
        android:layout_below="@id/icon2">

    </ImageView>

    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_alignStart="@id/username"
        android:textSize="18sp"
        android:inputType="textPassword"
        android:layout_marginTop="5dp"
        android:layout_below="@id/username"
        android:paddingLeft="5dp"
        android:hint="password">
    </EditText>

    <RadioGroup
        android:id="@+id/toggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pass"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:padding="5dp"
            android:textSize="18sp">
        </RadioButton>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Female"
            android:padding="5dp"
            android:layout_marginLeft="60dp">
        </RadioButton>

    </RadioGroup>

    <Button
        android:id="@+id/regester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toggle"
        android:layout_alignEnd="@id/toggle"
        android:layout_marginStart="10dp"
        android:background="#46B9C8"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Regester">

    </Button>

    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toggle"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="#D04072"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@id/regester"
        android:text="Clear" />


</RelativeLayout>